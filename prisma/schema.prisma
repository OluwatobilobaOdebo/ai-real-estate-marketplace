generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum UserRole {
  AGENT
  BUYER
  ADMIN
}

enum PropertyType {
  HOUSE
  APARTMENT
  CONDO
  TOWNHOUSE
  STUDIO
}

enum ListingStatus {
  ACTIVE
  PENDING
  SOLD
  OFF_MARKET
}

model User {
  id        String     @id @default(cuid())
  name      String
  email     String     @unique
  role      UserRole   @default(AGENT)

  properties Property[]

  createdAt DateTime   @default(now())
  updatedAt DateTime   @updatedAt
}

model Property {
  id          String         @id @default(cuid())
  title       String
  description String

  price       Int
  city        String
  state       String?
  country     String?        @default("USA")
  address     String?

  bedrooms    Int?
  bathrooms   Float?
  squareFeet  Int?

  propertyType PropertyType
  listingStatus ListingStatus @default(ACTIVE)

  imageUrl    String?

  // Relation to agent (user who owns this listing)
  agent       User?          @relation(fields: [agentId], references: [id])
  agentId     String?

  createdAt   DateTime       @default(now())
  updatedAt   DateTime       @updatedAt

  @@index([city, state])
  @@index([price])
  @@index([listingStatus])
}
